{% extends 'admin/base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ product.model }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Manufacturer</th>
                <td>{{ product.manufacturer }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Chipset</th>
                <td>{{ product.chipset }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_product_index') }}">Back to list</a>

    <a href="{{ path('admin_product_edit', {'id': product.id}) }}">Edit</a>

    {{ include('admin/product/_delete_form.html.twig') }}
{% endblock %}
