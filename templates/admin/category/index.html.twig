{% extends 'admin/base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row">
            {% include "_messages_flash.html.twig" %}
            <div class="col-12 d-flex align-items-center justify-content-between">
                <h3>Category list</h3>
                <a href="{{ path('admin_category_new') }}" class="btn btn-primary">Add</a>
            </div>
             <div class="navigation">
                {{ knp_pagination_render(categories) }}
            </div>

            {% for category in categories %}
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="card mt-3">
                        <img src="{{ category.image }}" class="card-img-top imageCard" alt="image_category">
                        <div class="card-body">
                            <h5 class="card-title">{{ category.name }}</h5>
                            <a href="{{ path('admin_category_edit',{ 'id' : category.id }) }}" class="btn btn-primary">Manage</a>
                        </div>
                    </div>
                </div>
            {% endfor %}

             <div class="navigation mt-3">
                {{ knp_pagination_render(categories) }}
            </div>
        </div>
    </div>
{% endblock %}
