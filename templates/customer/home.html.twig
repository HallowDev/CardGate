{% extends 'customer/base.html.twig' %}

{% block title %}CardGate{% endblock %}

{% block body %}

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
            <img class="d-block w-100 imageCarousel" src="https://images5.alphacoders.com/588/thumb-1920-588084.png" alt="First slide">
            </div>
            <div class="carousel-item">
            <img class="d-block w-100 imageCarousel" src="https://cdnb.artstation.com/p/assets/images/images/025/613/735/large/bertan-baday-msilogowallpaper2.jpg?1586358936" alt="Second slide">
            </div>
            <div class="carousel-item">
            <img class="d-block w-100 imageCarousel" src="https://rog.asus.com/media/158404796674.jpg" alt="Third slide">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <section class="bg-secondary">
        <div class="container py-5">
            <div class="row">
                <div class="col-12">
                    <h3 class="text-center text-white">Categories</h3>
                </div>  

                {% for category in categories %}

                <div class="col-sm-12 col-md-6 col-lg-4 mt-3">

                    <div class="card">
                        <img src="{{ category.image }}" class="card-img-top imageCard" alt="image_category">
                        <div class="card-body">
                            <h5 class="card-title">{{ category.name }}</h5>
                            <a href="{{ path('boutique_product_show_by_category',{'id': category.id}) }}" class="btn btn-primary w-100">See more</a>
                        </div>
                    </div>
            
                </div>
                
                {% endfor %}

            </div>
        </div>
    </section>

    <section>
        <div class="container py-5">
            <div class="row">
                <div class="col-12">
                    <h3 class="text-center">Newest products</h3>
                </div>  

                {% for product in products %}

                    <div class="col-sm-12 col-md-6 col-lg-4 mt-3">

                        <div class="card">
                            <img src="{{ product.image }}" class="card-img-top imageCard" alt="image_category">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.model }}</h5>
                                <p>{{ product.price | priceEuro }}</p>
                                <a href="{{ path('boutique_product_detail',{'id': product.id}) }}" class="btn btn-primary w-100">See more</a>
                            </div>
                        </div>
                
                    </div>
                    
                {% endfor %}

            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

{% endblock %}
