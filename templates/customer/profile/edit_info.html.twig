{% extends 'customer/base.html.twig' %}

{% block title %}Personal informations modification
{% endblock %}

{% block body %}
	<div class="container py-5">

		<div class="row">

			<div class="col-12 ">
				<a class="btn btn-dark" href="{{ path('profile_detail') }}">Back to profile</a>
			</div>

			<div class="col-sm-12 mt-3">
				<div class="card">
					<div class="card-header">
						<h5 class="card-title">Modify my personal informations</h5>
					</div>
					<div class="card-body">
						{{ form_start(form) }}
						{{ form_widget(form) }}
						<button class="btn btn-primary mt-3" type="submit">Save</button>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}

